<h1>Listing decisions</h1>

<table>
  <tr>
    <th>Decision</th>
    <th>Description</th>
    <th>Conditions</th>
    <th>Decision destination</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @decisions.each do |decision| %>
  <tr>
    <td><%= decision.decision_id %></td>
    <td><%= decision.description %></td>
    <td><%= decision.conditions %></td>
    <td><%= decision.decision_destination %></td>
    <td><%= link_to 'Show', decision %></td>
    <td><%= link_to 'Edit', edit_decision_path(decision) %></td>
    <td><%= link_to 'Destroy', decision, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

