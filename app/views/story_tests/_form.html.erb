<%= form_for(@story_test) do |f| %>
  <% if @story_test.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story_test.errors.count, "error") %> prohibited this story_test from being saved:</h2>

      <ul>
      <% @story_test.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  
  <%= f.fields_for :decision_tests do |child_form| %>

    <%= child_form.label :description %></br>
    <%= child_form.text_area :description %>

    <% unless child_form.object.new_record? %>
      <% # Don't forget to name both of these '_destroy' in Rails 3 %>
      <%= child_form.check_box '_destroy' %>
      <%= child_form.label '_destroy', 'Remove' %>
    <% end %>

  <% end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
